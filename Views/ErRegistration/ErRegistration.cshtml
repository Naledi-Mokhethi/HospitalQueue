@model HospitalQueue.Models.ErRegistration

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ER Registration</title>
    <!-- mobile responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Slick Carousel -->
    <link rel="stylesheet" href="~/plugins/slick/slick.css">
    <link rel="stylesheet" href="~/plugins/slick/slick-theme.css">
    <!-- FancyBox -->
    <link rel="stylesheet" href="~/plugins/fancybox/jquery.fancybox.min.css"> 

    <!-- Stylesheets -->
    <link href="~/css/style.css" rel="stylesheet">

    <!--Favicon-->
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">

</head>
<body>
    <label>PLEASE NOTE: If the registration page reloads, your input was invalid and your registration was NOT sent</label>
    <label>Please enter only letters for the Full Name and Last Name, and only numbers for the ID and Phone number, Thank you</label>
    <section class="appoinment-section section">
        <div class="container">    
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="contact-area">
                        <div class="section-title">
                            <h3>
                                Emergency Room
                                <span>Registration</span>
                            </h3>
                        </div>
                    <form method="post" id="erReg" name="contact_form" class="default-form contact-form" onsubmit="sendForm(event)">
                        <div class="row">
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <input asp-for="FullNames" class="form-control" placeholder="Full Name" required autocomplete="off" />
                                </div>
                                <div class="form-group">
                                    <input asp-for="IdentityNum" type="text" class="form-control" placeholder="Identity Number" required" maxlength="13" />
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" required="" autocomplete="off" />
                                  
                                </div>
                                <div class="form-group">
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Phone Number" required maxlength="10" />
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <strong>Please select your emergency (or similar)</strong>
                                <br>
                                <div class="form-group">
                                 
                                    <select asp-for="SelectedPriority">
                                        @foreach (var item in Model.ProblemPriority!)
                                        {
                                            <option value="@item.Key">@item.Value</option>
                                        }
                                    </select>
                                    
                                </div>
                                <div class="form-group">
                                    <textarea asp-for="Description" class="form-control" placeholder="Problem Description (Opional)">
                                           </textarea>
                                   
                                </div>
                                <div class="form-group text-center">
                                    <button type="submit" value="Save" class="btn-style-one">submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
    </section>
    <script src="~/plugins/bootstrap.min.js"></script>
    <script src="~/plugins/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function sendForm(e) {
            e.preventDefault();

            Swal.fire({
                title: 'Do you want to submit your ER registration',
                icon: 'question',
                showCancelButton:true
            }).then(result => {
                if (result.isConfirmed){
                    const erReg = document.getElementById('erReg');
                    erReg.submit();
                }
            })
        }
    </script>
</body>
</html>
